@using Exam_Objective.Models
@using System.Text.RegularExpressions;


@{
    ViewBag.Title = "Proposview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="panel-heading">
    @{var SubjectsEntity = (List<SubjectsModel>)ViewBag.Subject;

            foreach (var rows in SubjectsEntity)
            {
            <h3><span class="fa  fa-database"> คลังข้อสอบ / วิชา</span>@rows.SubjectName</h3>
        }
    }
    @{var SubjectShareEntity = (List<SubjectsModel>)ViewBag.SubjectShare;

            foreach (var rows in SubjectShareEntity)
            {
            <h3><span class="fa  fa-database"> คลังข้อสอบ / วิชา</span>@rows.SubjectName</h3>
        }
    }
</div>
<div class="panel panel-default">

    <div class="panel-heading">
        เลือกข้อสอบตามจุดประสงค์
    </div>
    <div class="panel-body">
        <div class="panel-body">
            <select id="showCate" name="showCate" class="showCate form-control" data-cate="cateid">
                <option value="0" selected>-- ข้อสอบตามจุดประสงค์ --</option>
                @{
                    var oEntity = (List<ObjectiveModel>)ViewBag.PObjective;
                    var ctCountap = (List<ObjectiveModel>)ViewBag.ObjectiveNotDis;
                    if (oEntity.Count > 0 && oEntity != null)
                    {
                        foreach (var rows in oEntity)
                        {
                            <option value='@rows.ObjID'>
                                @rows.ObjName
                                @foreach (var r2 in ctCountap)
                                {
                                    if (rows.ObjID == r2.ObjID)
                                    {
                                        <label> (@r2.CountProposID)</label>
                                    }
                                }
                            </option>
                        }
                    }
                }
            </select>
        </div>
    </div>
</div>
<button class="btn btn-primary" type="button" id="btnCrtPropos"><i class="fa fa-plus-circle"></i> ตั้งข้อสอบใหม่</button>
<br />
<br />
<div class="panel panel-warning">
    <div class="panel-heading">
        ข้อสอบ
    </div>
    <table id="tshowCate" class="dynamicTable tableTools table table-striped table-bordered">

        <tbody>
            @{
                var showProposEn = (List<PropositionModel>)ViewBag.ProposMain;
                if (showProposEn.Count > 0 && showProposEn != null)
                {
                    foreach (var rows in showProposEn)
                    {
                        <tr class="Row" data-pid="@rows.ProposID" data-cateid="@rows.ObjID">
                            <td>
                                @rows.ProposName &nbsp;
                                <a>
                                    <span class="btnEdit glyphicon glyphicon-cog" data-propos="@rows.ProposID" data-check="0" title="แก้ไขข้อสอบ : @rows.ProposName"></span>
                                </a>
                                <a>
                                    <span class="btnView glyphicon glyphicon-search" data-propos="@rows.ProposID" data-check="0" title="แสดงรายละเอียดข้อสอบ : @rows.ProposName"></span>
                                </a>
                                <a>
